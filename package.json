{
  "name": "emoji-whisper",
  "displayName": "Emoji Whisper",
  "version": "0.1.0",
  "description": "Suggests a single emoji based on your input using on-device AI",
  "private": true,
  "scripts": {
    "postinstall": "wxt prepare",
    "dev": "wxt --mode development",
    "build": "wxt build",
    "build:dev": "wxt build --mode development",
    "zip": "wxt zip",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "keywords": ["emoji", "browser-extension", "chrome-extension", "on-device-ai", "prompt-api"],
  "author": "WakishiDeer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WakishiDeer/emoji-whisper.git"
  },
  "homepage": "https://github.com/WakishiDeer/emoji-whisper#readme",
  "bugs": {
    "url": "https://github.com/WakishiDeer/emoji-whisper/issues"
  },
  "packageManager": "pnpm@10.28.2",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.2",
    "@wxt-dev/auto-icons": "^1.1.0",
    "eslint": "^9.39.2",
    "jsdom": "^28.0.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.54.0",
    "vitest": "^2.1.9",
    "wxt": "^0.20.13"
  }
}
