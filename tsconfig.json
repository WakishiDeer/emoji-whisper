{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "types": ["wxt/browser"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src", "wxt.config.ts"]
}
